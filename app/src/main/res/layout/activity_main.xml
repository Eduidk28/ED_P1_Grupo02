<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Título "Perfiles" centrado arriba -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perfiles"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- RecyclerView para mostrar perfiles (centrado) -->

    <!-- Botón centrado en la parte inferior -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPerfiles"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnIrPerfil"
        android:layout_below="@id/tvTitulo"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="25dp" />

    <Button
        android:id="@+id/btnIrPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Perfil"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>



</RelativeLayout>